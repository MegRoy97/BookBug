<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	 xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	 version="3.1">
    
    
    <servlet>
        <servlet-name>Register</servlet-name>
        <servlet-class>com.bookbug.controller.RegisterController</servlet-class>
    </servlet>
     <servlet-mapping>
        <servlet-name>Register</servlet-name>
        <url-pattern>/reg</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>com.bookbug.controller.LoginCon</servlet-class>
    </servlet>
     <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>UpadatePass</servlet-name>
        <servlet-class>com.bookbug.controller.UpdatePassCon</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UpadatePass</servlet-name>
        <url-pattern>/updatePass</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>Update</servlet-name>
        <servlet-class>com.bookbug.controller.UpdateCon</servlet-class>
    </servlet>
     <servlet-mapping>
        <servlet-name>Update</servlet-name>
        <url-pattern>/updateAccount</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>Logout</servlet-name>
        <servlet-class>com.bookbug.controller.LogoutCon</servlet-class>
    </servlet>
     <servlet-mapping>
        <servlet-name>Logout</servlet-name>
        <url-pattern>/logoutCon</url-pattern>
    </servlet-mapping>
    
     <servlet>
        <servlet-name>ProductCon</servlet-name>
        <servlet-class>com.bookbug.controller.ProductCon</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ProductCon</servlet-name>
        <url-pattern>/productcon</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>CartCon</servlet-name>
        <servlet-class>com.bookbug.controller.CartController</servlet-class>
    </servlet>
     <servlet-mapping>
        <servlet-name>SendToOrderCon</servlet-name>
        <url-pattern>/sendToOrdercon</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>SendToOrderCon</servlet-name>
        <servlet-class>com.bookbug.controller.SendToOrderController</servlet-class>
    </servlet>
     <servlet-mapping>
        <servlet-name>CartCon</servlet-name>
        <url-pattern>/addtocartcon</url-pattern>
    </servlet-mapping>

        <servlet>
        <servlet-name>DeleteCon</servlet-name>
        <servlet-class>com.bookbug.controller.DeleteItemController</servlet-class>
    </servlet>
     <servlet-mapping>
        <servlet-name>DeleteCon</servlet-name>
        <url-pattern>/deletecon</url-pattern>
    </servlet-mapping>
        
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
       <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
